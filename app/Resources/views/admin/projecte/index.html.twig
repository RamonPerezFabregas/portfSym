{% extends 'admin/layout_r.html.twig' %}

{% block body_id 'admin_projecte_index' %}

{% block main %}
  <h1>{{ 'title.projecte_list'|trans }}</h1>
   <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">{{ 'label.titol'|trans }}</th>
                <th scope="col" class="text-right"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for prj in projs %}
            <tr>
                <td>{{ prj.titol }}</td>
      
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_proj_show', {id: prj.id}) }}" class="btn btn-sm btn-default">
                            {{ 'action.show'|trans }}
                        </a>

                        <a href="{{ path('admin_proj_edit', {id: prj.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2" align="center">{{ 'prj.no_projecte_found'|trans }}</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
    
    
    
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_proj_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create_proj'|trans }}
        </a>
    </div>

    {{ show_source_code(_self) }}
{% endblock %}