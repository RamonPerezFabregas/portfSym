{% extends 'admin/layout_r.html.twig' %}

{% block body_id 'admin_projecte_show' %}

{% block main %}
    <h1>{{ prj.titol }}</h1>

    <p class="post-metadata" border=1>
        <span class="metadata"><i class="fa fa-key"></i> {{ prj.id }}</span>
        <span class="metadata"><i class="fa fa-calendar"></i> {{ prj.anny }}</span>
        <span class="metadata"><i class="fa fa-tags"></i> {{ prj.tipus}}</span>
    </p>

    <p>
      {{ prj.foto }}
    </p>
    

    {{ prj.descripcio|md2html }}

{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_proj_edit', {id: prj.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit_contents'|trans }}
        </a>
    </div>

    <div class="section">
        {{ include('admin/projecte/_delete_form.html.twig', {prj: prj}, with_context = false) }}
    </div>
{% endblock %}
